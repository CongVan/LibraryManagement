                @*<span class="text-muted ">Quay lại</span>*@
            </div>
            <div class="modal-body">
                @*@Html.Partial("ParitalBookDetail")*@
                
            </div>
            <div class="modal-footer">
                <a href="ui-modals.html#" class="btn btn-info btn-rounded ripple text-left">Learn more</a>
                <button type="button" class="btn btn-danger btn-rounded ripple text-left" data-dismiss="modal">Close this</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



