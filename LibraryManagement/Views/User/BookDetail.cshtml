@section js{
    <script>
        $(document).ready(function () {
            let id = new URLSearchParams(window.location.search).get('id');
            $.getJSON('/User/GetBookDetail?id='+id)
                .then(function (result) {
                    if (result) {
                        let book = result.bo;
                        //var html = $.parseHTML(book.Description);
                        var decode = $('<div />').html(book.Description).text();
                        $('#tabInfo').html(decode);
                        $('#bookTitle').html(book.Title);
                        $('#publisherName').html(result.publishName);

                        let imgs = book.Image.split(';');
                        let htmlImgs = '',htmlControls='';
                        $.each(imgs, (i, img) => {
                            if (i == 0) {
                                htmlControls +=`<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>`
                                htmlImgs += `<div class="carousel-item active"><img class="d-block w-50 mx-auto" src = "${img}"  alt = "${book.Title}" ></div >`
                            } else {
                                htmlControls += `<li data-target="#carouselExampleIndicators" data-slide-to="${i}" ></li>`
                                htmlImgs += `<div class="carousel-item "><img class="d-block w-50 mx-auto" src = "${img}"  alt = "${book.Title}" ></div >`
                            }
                            
                        });
                        $('#controlImages').html(htmlControls);
                        $('#bookImages').html(htmlImgs);
                        $('#bookAuthor').html(`Tác giả: ${book.Author}<small class="float-right">Số trang: <strong id="numberOfPages">${book.NumberOfPages}</strong></small>`);
                    }
                    
                    console.log(result);
                }).catch(function (err) {
                    alert(err);
                })
        })

    </script>
    
